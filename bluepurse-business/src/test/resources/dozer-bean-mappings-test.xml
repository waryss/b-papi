<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://dozer.sourceforge.net"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <!-- Configuration de Dozer -->
    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>true</wildcard>
    </configuration>

    <!-- Entity Objects mapping configuration -->
    <mapping>
        <class-a>net.waryss.mtools.bluepurse.entity.UserEntity</class-a>
        <class-b>net.waryss.mtools.bluepurse.model.UserBean</class-b>
    </mapping>
</mappings>